<div class="pt-16 lg:pt-24">
  <h2 class="text-center mb-6">What would you like to do today?</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full md:w-4/5 lg:w-3/4 mx-auto">
    <div>
      <%= live_component @socket, JumboButton, action: CreateCma, title: "CMA", text: "Create a Comparative Market Analysis report", color: "blue" %>
    </div>
    <div>
      <%= live_component @socket, JumboButton, action: CreateShowcase, title: "Showcase", text: "Create a sharable, detailed, listing report", color: "pink" %>
    </div>
    <div>
      <%= live_component @socket, JumboButton, action: CreateBuyerTour, title: "Buyer Tour", text: "Create a mapped route of lisings on the market", color: "orange" %>
    </div>
  </div>
  <div class="mt-16">
    <h2>Recent Activity</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
      <%= for insight <- @insights do %>
        <%= live_component @socket, InsightCard, insight: insight, id: "insight_id_#{insight.id}" %>
      <% end %>
    </div>
  </div>
</div>
