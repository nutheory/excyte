<div class="bg-white mb-12 shadow rounded-md p-4">
  <h4>Subscription</h4>
  <p class="text-base">Select a plan</p>
  <div class="grid grid-cols-2 gap-4 w-full md:w-4/5 mx-auto m-4">
    <%= if @plan.id === "month" do %>
      <div class="relative text-center p-2 flex flex-col items-center justify-center rounded border border-cyan-700 text-cyan-700 bg-cyan-50">
        <h3 class="mb-0">Monthly</h3>
        <h2 class="leading-none">$24.95</h2>
        <div class="absolute top-1 left-1">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    <% else %>
      <div
        phx-click="toggle-selected-plan"
        phx-value-option="month"
        class="text-center p-2 flex flex-col items-center justify-center rounded border border-white cursor-pointer">
        <h3 class="mb-0">Monthly</h3>
        <h2 class="leading-none">$24.95</h2>
      </div>
    <% end %>
    <%= if @plan.id === "year" do%>
      <div class="relative text-center p-2 flex flex-col items-center justify-center rounded border border-cyan-700 text-cyan-700 bg-cyan-50">
        <h3 class="mb-0">Yearly</h3>
        <h2 class="mb-0 leading-none">$249.95</h2>
        <p>2 months free</p>
        <div class="absolute top-1 right-1">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    <% else %>
      <div
        phx-click="toggle-selected-plan"
        phx-value-option="year"
        class="text-center p-2 flex flex-col items-center justify-center rounded border border-white cursor-pointer">
        <h3 class="mb-0">Yearly</h3>
        <h2 class="mb-0 leading-none">$249.95</h2>
        <p>2 months free</p>
      </div>
    <% end %>
  </div>
  <div class="text-base px-1 mt-6 mb-4">
    <%= if @plan.id === "month" do %>
      <p>After your <span class="font-bold italic">30 day trial</span> ends you will be billed <span class="font-bold italic">$24.95</span>.</p>
    <% else %>
      <p>After your <span class="font-bold italic">30 day trial</span> ends you will be billed <span class="font-bold italic">$249.95</span>.</p>
    <% end %>
  </div>
  <%= if @payment_success !== true do %>
    <%= live_component @socket, Payment, current_user: @current_user, account: @account, id: :payment %>
  <% end %>
</div>
