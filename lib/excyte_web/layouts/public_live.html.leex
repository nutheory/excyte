<%= live_component @socket, ExcyteWeb.PublicHeader, content: nil %>
<div class="bg-gray-200 py-12 px-4">
  <main role="main" class="container mx-auto">
    <p class="alert alert-info" role="alert"><%= live_flash(@flash, :info) %></p>
    <p class="alert alert-danger" role="alert"><%= live_flash(@flash, :error) %></p>
    <%= @inner_content %>
  </main>
  <script defer phx-track-static type="text/javascript" src="/js/public.js"></script>
</div>
